<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/quiz" android:visibility="visible"
        tools:visibility="visible">
    <Button
            android:text="@string/answer0d"
            android:layout_width="250dp"
            android:layout_height="100dp" android:id="@+id/answerD"
            tools:visibility="visible" android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            android:layout_marginBottom="20dp"/>
    <Button
            android:text="@string/answer0c"
            android:layout_width="250dp"
            android:layout_height="100dp" android:id="@+id/answerC"
            tools:visibility="visible" android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintBottom_toTopOf="@+id/answerD" android:layout_marginBottom="20dp"/>
    <Button
            android:text="@string/answer0b"
            android:layout_width="250dp"
            android:layout_height="100dp" android:id="@+id/answerB"
            tools:visibility="visible" android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintBottom_toTopOf="@+id/answerC" android:layout_marginBottom="20dp"/>
    <Button
            android:text="@string/answer0a"
            android:layout_width="250dp"
            android:layout_height="100dp" android:id="@+id/answerA"
            tools:visibility="visible" android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintBottom_toTopOf="@+id/answerB" android:layout_marginBottom="20dp"
    />
    <TextView
            android:text="@string/question0"
            android:layout_width="250dp"
            android:layout_height="200dp"
            app:layout_constraintBottom_toTopOf="@+id/answerA"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" android:id="@+id/question"/>

</androidx.constraintlayout.widget.ConstraintLayout>