<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/quiz" android:visibility="visible"
        tools:visibility="visible">
    <TextView
            android:text="score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/score"
            app:layout_constraintEnd_toStartOf="@+id/question" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/score_lower"
            app:layout_constraintTop_toTopOf="@+id/score_higher"/>
    <TextView
            android:text="Highscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/highscore"
            app:layout_constraintEnd_toStartOf="@+id/question" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/score_higher"/>
    <Button
            android:text="@string/answer0d"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/answerD"
            tools:visibility="visible" android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="@+id/guideline7"
            android:layout_marginStart="10dp" android:layout_marginTop="10dp" android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"/>
    <Button
            android:text="@string/answer0c"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/answerC"
            tools:visibility="visible" android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/guideline7" app:layout_constraintTop_toTopOf="@+id/guideline5"
            android:layout_marginStart="10dp" android:layout_marginTop="10dp" android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"/>
    <Button
            android:text="@string/answer0b"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/answerB"
            tools:visibility="visible" android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/guideline5" app:layout_constraintTop_toTopOf="@+id/guideline6"
            android:layout_marginTop="10dp" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"/>
    <Button
            android:text="@string/answer0a"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/answerA"
            tools:visibility="visible" android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/guideline6" app:layout_constraintTop_toTopOf="@+id/guideline4"
            android:layout_marginStart="10dp" android:layout_marginTop="10dp" android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"/>
    <TextView
            android:text="@string/question0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:id="@+id/question"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline4" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="100dp" android:layout_marginEnd="100dp"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline4"
                                                android:orientation="horizontal"
                                                app:layout_constraintTop_toTopOf="parent"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintGuide_percent="0.30036187"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline5"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.65"
                                                app:layout_constraintTop_toTopOf="parent"
                                                app:layout_constraintBottom_toBottomOf="parent"
    />
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline6"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.475"
                                                app:layout_constraintTop_toTopOf="parent"
                                                app:layout_constraintBottom_toBottomOf="parent"
    />
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline7"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.825"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/score_lower"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.25"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/score_higher"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.125"/>

</androidx.constraintlayout.widget.ConstraintLayout>